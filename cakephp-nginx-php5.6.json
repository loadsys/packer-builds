{
  "builders": [
    {
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "output_directory": "packer-{{user `template`}}-virtualbox",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "source_path": "{{ user `virtualbox_source_path` }}",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-ovf",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `memory` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{ user `cpus` }}"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `template` }}"
    },
    {
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "output_directory": "packer-{{user `template`}}-vmware",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "source_path": "{{ user `vmware_source_path` }}",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "tools_upload_flavor": "linux",
      "type": "vmware-vmx",
      "vm_name": "{{ user `template` }}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{ user `memory` }}",
        "numvcpus": "{{ user `cpus` }}"
      }
    }
  ],
  "post-processors": [
    {
      "output": "builds/{{user `box_basename`}}.{{.Provider}}.box",
      "keep_input_artifact": true,
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp/bento-metadata.json",
      "source": "{{user `metadata`}}",
      "type": "file"
    },
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}",
        "WEBSERVER=nginx"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "scripts": [
        "scripts/common/metadata.sh",
        "scripts/ubuntu/update.sh",
        "scripts/debian/cakephp-base.sh",
        "scripts/ubuntu/git.sh",
        "scripts/ubuntu/nginx.sh",
        "scripts/ubuntu/php5.6.sh",
        "scripts/common/composer.sh",
        "scripts/ubuntu/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "box_basename": "cakephp-nginx-php5.6",
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "cpus": "1",
    "description": "Box with Nginx 1.10 and PHP 5.6. Optimized for CakePHP applications.",
    "git_revision": "__unknown_git_revision__",
    "headless": "",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "memory": "512",
    "metadata": "floppy/dummy_metadata.json",
    "name": "cakephp-nginx-php5.6",
    "no_proxy": "{{env `no_proxy`}}",
    "template": "cakephp-nginx-php5.6",
    "version": "2.1.TIMESTAMP",
    "virtualbox_source_path": "packer-ubuntu-14.04-amd64-virtualbox/ubuntu-14.04-amd64.ovf",
    "vmware_source_path": "packer-ubuntu-14.04-amd64-vmware/ubuntu-14.04-amd64.vmx"
  }
}
